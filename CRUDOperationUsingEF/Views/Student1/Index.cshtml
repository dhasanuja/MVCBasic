@model IEnumerable<CRUDOperationUsingEF.Models.Student1>

@{
    ViewBag.Title = "Index";
}



<h2>Index</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="students">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TrainerId)*@
                @Html.DisplayNameFor(model => model.Trainer.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.TrainerId)*@
                    @Html.DisplayFor(modelItem => item.Trainer.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RollNumber }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RollNumber }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.RollNumber })
                </td>
            </tr>
        }

    </tbody>
</table>
<script src="~/Scripts/jquery-3.6.4.min.js"></script>
<script>
    $(function () {
        $("#students").DataTable();
    });
</script>